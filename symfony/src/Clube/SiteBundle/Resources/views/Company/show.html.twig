{% extends 'SiteBundle::layout.html.twig' %}
{% block content %}
    <section class="cc-contact cc-register-form">
        <h1 class="cc-header">Marca</h1>

        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Createdate</th>
                    <td>{{ entity.createDate|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Users</th>
                    <td>
                        <ul>
                            {% for item in entity.users %}
                                <li><a href="{{ item.name }}">{{ item.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            </tbody>
        </table>

    </section>

        <ul class="record_actions">
    <li>
        <a href="{{ path('marca') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('marca_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
