{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register cc-register-form">
    <h1 class="cc-register-title">Registre-se para fazer parte do Clube dos Criadores</h1>
	<div class="cc-register-wrapper">



			<div class="cc-form-input">
				{{ form_label(form.email) }}
				{{ form_widget(form.email) }}
			</div>

			<div class="cc-form-input">
				{{ form_label(form.name) }}
				{{ form_widget(form.name) }}
			</div>
			
			<div class="cc-form-input">
				{{ form_label(form.plainPassword.first) }}
				{{ form_widget(form.plainPassword.first) }}
			</div>
			
			<div class="cc-form-input">
				{{ form_label(form.plainPassword.second) }}
				{{ form_widget(form.plainPassword.second) }}
			</div>
			
			<div class="cc-form-date">
				{{ form_label(form.birthDate) }}
				{{ form_widget(form.birthDate) }}
			</div>
			
			<div class="cc-form-select">
				{{ form_label(form.gender) }}
				{{ form_widget(form.gender) }}
			</div>
			
			<div class="cc-form-checkbox">
				{{ form_widget(form.isAgree) }}
				{{ form_label(form.isAgree) }}
			</div>
			{{ form_widget(form._token) }}
			<div class="cc-form-submit">
				<button class="cc-button">Registrar</button>
			</div>

		<div class="cc-login-row">		
			<ul class="cc-login-social">
				<li class="cc-login-social-item">
					<a href="https://www.facebook.com/dialog/oauth?response_type=code&client_id=422662104529504&scope=email&redirect_uri=http%3A%2F%2Fwww.clubedoscriadores.com.br%2Fconnect%2Fservice%2Ffacebook"><img src="{{ asset('bundles/site/images/facebook.png') }}" alt="facebook" /></a>
				</li>
				<li class="cc-login-social-item">
					<a href="https://accounts.google.com/o/oauth2/auth?response_type=code&client_id=772762129600-nria7q0d8dio5319keakd8qq7vk4hhao.apps.googleusercontent.com&scope=https%3A%2F%2Fwww.googleapis.com%2Fauth%2Fuserinfo.email+https%3A%2F%2Fwww.googleapis.com%2Fauth%2Fuserinfo.profile&redirect_uri=http%3A%2F%2Fwww.clubedoscriadores.com.br%2Fconnect%2Fservice%2Fgoogle"><img src="{{ asset('bundles/site/images/googleplus.png') }}" alt="google" /></a>
				</li>
			</ul>
			<div class="cc-login-text"><p class="cc-login-text-p">Ou use as redes sociais para entrar</p></div>
		</div>
	</div>
	<div class="cc-register-image">
		<img src="{{ asset('bundles/site/images/registrar.png') }}" alt="Registrar" />
	</div>
	<div class="cc-errors">
		{{ form_errors(form) }}
		{{ form_errors(form.email) }}

		{{ form_errors(form.name) }}
		{{ form_errors(form.plainPassword.first) }}
		{{ form_errors(form.plainPassword.second) }}
		{{ form_errors(form.birthDate) }}
		{{ form_errors(form.gender) }}
		{{ form_errors(form.isAgree) }}	
	</div>
</form>
