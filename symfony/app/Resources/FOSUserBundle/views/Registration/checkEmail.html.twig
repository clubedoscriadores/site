{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    <div class="cc-register-check">
        <h1 class="cc-register-check-title">{{ 'registration.check_email_title'|trans() }}</h1>
        <p class="cc-register-check-text">{{ 'registration.check_email_text'|trans({'%email%': user.email}) }}</p>
        <p class="cc-register-check-text">{{ 'registration.check_email_text_2'|trans() }}</p>
    </div>
{% endblock content %}
